@model IEnumerable<HelloWorldV1.Models.Movie>

<b> Movies List:</b>

<h4>@Html.ActionLink("Add a movie here", "Add")</h4>
<table class="table">

    <tr>
        <th>Title</th>
        <th>Year</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = @movie.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = @movie.Id })</td>
        </tr>
    }
</table>