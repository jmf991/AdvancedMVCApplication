@{
    Layout = null;
    Random rnd = new Random();
    int randomNumber = rnd.Next(1, 100);
     int[] primes = new int[] {  1, 3, 5, 7, 11 }; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @if (randomNumber % 2 == 0)
        {
            <text>The generated random number @randomNumber is even number</text>
        }
        else
        {
            <text>The generated random number @randomNumber is odd number</text>
        }
        List of Prime numbers:
        <ul>
            @foreach (int p in primes)
            {
                <li>@p</li>
            }
        </ul>
    </div>
</body>
</html>
